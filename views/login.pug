extends layout

block content

	div(style='display: table; position: absolute; height: 100%; width: 100%;')
		div(style='display: table-cell; vertical-align: middle;')
			div(style='margin-left: auto; margin-right: auto; width: 25%;')
				panel.panel-primary
					div.panel-heading
						h4 VCT Login
					div.panel-body
						form.form-horizontal(method='POST' action='/login')
							fieldset
								div.form-group
									input#username.input-sm.form-control(type='text', placeholder='User Name' name='username')
								div.form-group
									input#password.input-sm.form-control(type='password', placeholder='Password' name='password')
								div.btn-group
									button.btn.btn-primary.btn-sm(type='submit') Login
									button.btn.btn-primary.btn-sm(type='button' name='register') Register
